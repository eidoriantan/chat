<script src="/scripts/login.js"></script>

<main class="d-flex flex-column flex-md-row flex-justify-around my-5">
  <form id="form-login" action="/authorize" method="post" class="Box col-10 col-sm-5 col-md-4 col-lg-3 mx-auto mt-5">
    <div class="Box-body">
      <h3 class="f2-light">Set your public name</h3>
      <div class="form-group">
        <div class="form-group-header">
          <label for="name">Name:</label>
        </div>
        <div class="form-group-body">
          <input id="name" name="name" type="text" placeholder="Name" class="form-control" autocomplete="name" required>
        </div>
      </div>

      <button type="submit" class="btn btn-primary btn-block">Proceed</button>
    </div>
  </form>
</main>
